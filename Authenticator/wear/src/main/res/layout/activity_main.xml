<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.lmu.mt.tokt.authenticator.MainActivity"
    tools:deviceIds="wear">

    <TextView
        android:id="@+id/connection_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:text="DISCONNECTED"
        android:textStyle="bold"
        app:layout_box="all" />

    <TextView
        android:id="@+id/heart_rate_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:layout_marginBottom="32dp"
        android:text="Heartrate:"
        app:layout_box="all" />

    <TextView
        android:id="@+id/heart_rate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="8dp"
        android:text="0.0"
        android:textStyle="bold"
        app:layout_box="all" />

    <TextView
        android:id="@+id/step_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:layout_marginBottom="8dp"
        android:text="Steps:"
        app:layout_box="all" />

    <TextView
        android:id="@+id/step_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:text="0.0"
        android:textStyle="bold"
        app:layout_box="all" />

    <TextView
        android:id="@+id/proximity_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:layout_marginTop="16dp"
        android:text="Proximity:"
        app:layout_box="all" />

    <TextView
        android:id="@+id/proximity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text="-"
        android:textStyle="bold"
        app:layout_box="all" />

    <TextView
        android:id="@+id/beacon_identifier_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="36dp"
        android:textSize="7sp"
        android:text=""
        app:layout_box="all" />


    <TextView
        android:id="@+id/clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:text="00:00"
        android:textColor="@android:color/white"
        app:layout_box="all" />

    <Button
        android:id="@+id/close"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="24dp"
        android:layout_width="64dp"
        android:layout_height="40dp"
        android:textSize="12sp"
        android:text="close" />

</android.support.wearable.view.BoxInsetLayout>
